{
  "version": "0.2.0",
  "configurations": [
    // ============================
    // Docker Debug Launcher
    // Use when VS Code is ATTACHED to the running container
    // ============================
    {
      "name": "Launch in Docker",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build (Docker)",
      "program": "dotnet",
      "args": [
        "/hostmount/workspace/your-app/bin/Debug/net8.0/your-app.dll"    // 1. UPDATE the Directory and .dll name
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole"
    },

    // ============================
    // Windows Local Debug Launcher
    // ============================
    {
      "name": ".NET Core Launch (Windows)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build (Windows)",
      "program": "${workspaceFolder}/bin_win/Debug/net8.0/your-app.dll",  // 1. UPDATE the Directory and .dll name
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    },

    // ============================
    // Generic Attach. 
    //    Debug an already running application (alternative)
    //    - After selecting this select: your-app.dll
    // ============================
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}