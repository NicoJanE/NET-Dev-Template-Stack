// template_launch.worker.json
{
  "version": "0.2.0",
  "configurations": [

    // -----------------------------------------------------
    // Docker Debug Launcher (Worker / Background Service)
    // -----------------------------------------------------
    {
      "name": "Launch Worker in Docker",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build (Docker)",
      "program": "docker",
      "args": [
        "exec",
        "-i",
        "net8-service-net-core8-img-1",                                     // Container ID
        "dotnet",
        "/hostmount/workspace/your-app/bin/Debug/net8.0/your-app.dll"       // 1. UPDATE the Directory and .dll name
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole",

      "pipeTransport": {
        "pipeCwd": "${workspaceFolder}",
        "pipeProgram": "docker",
        "pipeArgs": [
          "exec",
          "-i",
          "net8-service-net-core8-img-1"
        ],
        "debuggerPath": "/usr/share/dotnet/dotnet",
        "quoteArgs": false
      }
    },

    // --------------------------------------------------------------
    // Windows Local Debug Launcher (Worker / Background Service)
    // --------------------------------------------------------------
    {
      "name": ".NET Core Launch (Windows Worker)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net8.0/your-app.dll",   // 1. UPDATE the .dll name
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    },

    // ----------------------------------------------------------------
    // Generic Attach. 
    //    Debug an already running application (Docker / Windows / VM)
    // ----------------------------------------------------------------
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
