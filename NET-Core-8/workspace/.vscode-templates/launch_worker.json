// template_launch.worker.json
{
  "version": "0.2.0",
  "configurations": [

    // -----------------------------------------------------
    // Docker Debug Launcher (Worker / Background Service)
    // Use when VS Code is ATTACHED to the running container
    // -----------------------------------------------------
    {
      "name": "Launch Worker in Docker",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build (Docker)",
      "program": "dotnet",
      "args": [
        "/hostmount/workspace/your-app/bin/Debug/net8.0/your-app.dll"       // 1. UPDATE the Directory and .dll name
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole"
    },

    // --------------------------------------------------------------
    // Windows Local Debug Launcher (Worker / Background Service)
    // --------------------------------------------------------------
    {
      "name": ".NET Core Launch (Windows Worker)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build (Windows)",
      "program": "${workspaceFolder}/bin/Debug/net8.0/your-app.dll",   // 1. UPDATE the .dll name
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    },

    // ----------------------------------------------------------------
    // Generic Attach. 
    //    Debug an already running application (Docker / Windows / VM)
    // ----------------------------------------------------------------
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}