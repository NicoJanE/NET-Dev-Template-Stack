// template_launch.tests.json
{
  "version": "0.2.0",
  "configurations": [

    // ---------------------------------------------------
    // Docker Test Runner
    // Use when VS Code is ATTACHED to the running container
    // ---------------------------------------------------
    {
      "name": "Run Tests in Docker",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build (Docker)",
      "program": "dotnet",
      "args": [
        "test",
        "/hostmount/workspace/your-tests/your-tests.csproj",                 // 1. UPDATE the Directory and project name
        "--logger:console;verbosity=detailed"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "stopAtEntry": false
    },

    // ---------------------------------------------------
    // Windows Local Test Runner
    // ---------------------------------------------------
    {
      "name": ".NET Core Run Tests (Windows)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build (Windows)",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}\\your-tests.csproj",                            // 2. UPDATE the  project name
        "--logger:console;verbosity=detailed"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "stopAtEntry": false
    },

    // ---------------------------------------------------
    // Generic Attach (for debugging a hanging test host)
    // ---------------------------------------------------
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}